include ../text-field/text-field.pug
include ../radio-buttons/radio-buttons.pug
include ../radio-buttons/radio-buttons.pug
include ../masked-text-field/masked-text-field.pug
include ../toggle/toggle.pug
include ../dropdown/dropdown.pug
include ../button-colored-long/button-colored-long.pug
include ../button-framed/button-framed.pug
        
mixin registration-form
    div.registration-form.font_body
        div.font_h1 Регистрация аккаунта
        div.registration-form__name-surname-sex
            +text-field('', '', 'Имя')
            +text-field('', '', 'Фамилия')
            +radio-buttons('registration-form__chkbx', '', 'Мужчина', 'Женщина')
        +masked-text-field('Дата рождения', '', 'ДД.ММ.ГГГГ')
        div.registration-form__email-password-toggle
            +text-field('Данные для входа в сервис', '', 'Email')
            +text-field('', '', 'Пароль')
            +toggle('', 'Получать спецпредложения')
        +button-colored-long('registration-form__button', '#', 'Перейти к оплате')
        div.registration-form__login
            div Уже есть аккаунт на Toxin
            +button-framed('registration-form__button', '#', 'Войти')