            +masked-text-field('Masked text field', 'default', 'ДД.ММ.ГГГГ')

        div.form-element 
            +date-dropdown('Date dropdown', 'Date dropdown')

        div.form-element 
            +filter-date-dropdown('Filter date dropdown')

        div.form-element
            +subscription-text-field('Subscription text field', 'Email')

        div.form-element
            +dropdown('Dropdown', 'Default', 'Сколько гостей1', 'Взрослые1', 'Дети1', 'Младенцы1')

        div.form-element 
            +expandable-checkbox-list('Dropdown', 'Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь', 'Телевизор', 'Шампунь')

        div.form-element 
            +icon-text-list('../blocks/images/insert_emoticon.svg', 'Комфорт', 'Шумопоглощающие стены')
            +icon-text-list('../blocks/images/location_city.svg', 'Удобство', 'Окно в каждой из спален')
