include ../blocks/like-button/like-button.pug
include ../blocks/rate-button/rate-button.pug

block style 
    link(rel="stylesheet", href="../style.scss")

block title
  title Form Elements

block header
    div.header__logo
        a(href="../index.pug")
            +logo('../blocks/images/icon.svg', '../blocks/images/toxin.svg')

block main
    div.main-wrapper
        div.form-element
            +text-field('Text field', 'default', 'Email')

        div.form-element
            +text-field('Text field', 'Hover/focus', 'This is pretty awesome')

        div.form-element
            +dropdown('Dropdown', ' ', 'Сколько гостей', 'Взрослые', 'Дети', 'Младенцы')    

        div.form-element
            +masked-text-field('Masked text field', 'default', 'ДД.ММ.ГГГГ')

        div.form-element 
            +date-dropdown('Date dropdown', 'Date dropdown')

        div.form-element 
            +filter-date-dropdown('Filter date dropdown')

        div.form-element
            +subscription-text-field('Subscription text field', 'Email')

        div.form-element
            +dropdown('Dropdown', 'Default', 'Сколько гостей1', 'Взрослые1', 'Дети1', 'Младенцы1')

        div.form-element 
            +expandable-checkbox-list('Dropdown', 'Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь', 'Телевизор', 'Шампунь')

        div.form-element 
            +icon-text-list('../blocks/images/insert_emoticon.svg', 'Комфорт', 'Шумопоглощающие стены')
            +icon-text-list('../blocks/images/location_city.svg', 'Удобство', 'Окно в каждой из спален')

        div.form-element 
            +checkbox-buttons('Checkbox buttons', 'Можно курить', 'Можно с питомцами', 'Можно пригласить гостей (до 10 человек)')

        div.form-element 
            +radio-buttons('Radio buttons', 'Мужчина', 'Женщина')

        div.form-element 
            +toggle('Toggle', 'Получать спецпредложения')

        div.form-element 
            +toggle('', 'Получать спецпредложения')

        div.form-element
            div.form-element__label.font_h3 Like buttons
            div.form-element__like-button
                +like-button('Лайки кнопка 1')
                +like-button('Лайки кнопка 2')

        div.form-element 
            div.form-element__label.font_h3 Rate buttons
            div.form-element__rate-button
                +rate-button('rating_demo1')
                +rate-button('rating_demo2')


        <div class="star-rating">
            <fieldset>
                <input type="radio" id="stars5" name="rating" value="50" /><label for="stars5" title="Outstanding">5</label>
                <input type="radio" id="stars4" name="rating" value="40" /><label for="stars4" title="Very Good">4</label>
                <input type="radio" id="stars3" name="rating" value="30" /><label for="stars3" title="Good">3</label>
                <input type="radio" id="stars2" name="rating" value="20" /><label for="stars2" title="Poor">2</label>
                <input type="radio" id="stars1" name="rating" value="10" /><label for="stars1" title="Very Poor">1</label>
            </fieldset>
        </div>

