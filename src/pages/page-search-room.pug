extends ../templates/page_template.pug

include ../blocks/page-header/page-header.pug 

include ../blocks/filter-date-dropdown/filter-date-dropdown.pug
include ../blocks/dropdown/dropdown.pug
include ../blocks/checkbox-buttons/checkbox-buttons.pug
include ../blocks/rich-checkbox-buttons/rich-checkbox-buttons.pug
include ../blocks/expandable-checkbox-list/expandable-checkbox-list.pug

include ../blocks/room-card/room-card.pug 

block style
  link(rel="stylesheet", href="../scss/style.css")
  script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
  script(type="text/javascript", src="../node_modules/air-datepicker/dist/js/datepicker.min.js")

block title
  title Отель Toxin - Поиск номера
block header
    +page-header    
block main
  div.search-room-container
    div.search-panel
      +filter-date-dropdown('Даты пребывания в отеле')
      +dropdown('uniqID', 'Гости', '', 'Выберите гостей', 'Взрослые', 'Дети', 'Младенцы')
      div ТУТ ДОЛЖЕН БЫТЬ СЛАЙДЕР ЦЕН
      +checkbox-buttons('checkbox_btn_name', 'Правила дома', 'Можно курить', 'Можно с питомцами', 'Можно пригласить гостей (до 10 человек_')
      +rich-checkbox-buttons('rich_checkbox_btn_name', 'Доступность', 'Широкий коридор', 'Ширина коридоров в номере не менее 91 см', 'Помощник для инвалидов', 'На 1 этаже вас встретит специалист и проводит до номера')
      +dropdown('udobstva', 'Удобства номера', '', 'Выберите удобства', 'Спальни', 'Кровати', 'Ванные комнаты')
      +expandable-checkbox-list('Дополнительные удобства', 'Завтрак', 'Письменный стол', 'Стол для кормления', 'Кроватка', 'Телевизор', 'Шампунь')
    div.rooms-wrapper
block footer
  include ../blocks/page-footer/page-footer.pug